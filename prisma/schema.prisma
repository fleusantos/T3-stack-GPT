generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model SavedShow {
    id          String     @id @default(cuid())
    name        String
    description String?
    poster      String?
    mediaType   MEDIA_TYPE @default(tv)
    trailer     String?
    genres      Genre[]
    releaseDate DateTime?
    voteAverage Float?
    voteCount   Int?
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
}

model Genre {
    id          String     @id @default(cuid())
    name        String
    SavedShow   SavedShow? @relation(fields: [savedShowId], references: [id], onDelete: Cascade)
    savedShowId String?
}

enum MEDIA_TYPE {
    movie
    tv
}
